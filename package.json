{
    "name": "@beanbag/ink",
    "version": "0.8.1",
    "description": "A CSS component library for crafting beautiful webapps.",
    "homepage": "https://github.com/beanbaginc/ink",
    "github": "https://github.com/beanbaginc/ink",
    "keywords": [
        "babel-plugin",
        "components",
        "css",
        "dark-mode",
        "styles",
        "themes"
    ],
    "author": {
        "name": "Beanbag, Inc.",
        "email": "questions@beanbaginc.com",
        "url": "https://www.beanbaginc.com"
    },
    "license": "MIT",
    "scripts": {
        "build": "tsc -p ./tsconfig.build.json && rollup -c --bundleConfigAsCjs",
        "build-storybook": "storybook build",
        "clean": "rm -rf lib _build",
        "full-build": "npm run clean && npm run build",
        "lint": "eslint src",
        "storybook": "storybook dev -p 6006 --no-open",
        "test": "jasmine"
    },
    "main": "lib/ink.js",
    "exports": {
        ".": {
            "import": {
                "types": "./lib/index.d.mts",
                "default": "./lib/esm/index-all.js"
            },
            "require": {
                "types": "./lib/index.d.ts",
                "default": "./lib/cjs/index.js"
            }
        },
        "./babel-preset": "./lib/babel-preset/index.js",
        "./lib/*.css": "./lib/*.css",
        "./lib/*.less": "./lib/*.less",
        "./*.css": "./lib/*.css",
        "./*.less": "./lib/*.less"
    },
    "files": [
        "LICENSE",
        "NEWS.md",
        "README.md",
        "lib"
    ],
    "types": "lib/index.d.ts",
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "@beanbag/spina": "^3.1.1",
        "@types/jquery": "^3.5.33",
        "babel-plugin-htm": "^3.0.0"
    },
    "devDependencies": {
        "@babel/plugin-external-helpers": "^7.27.1",
        "@babel/register": "^7.28.3",
        "@beanbag/frontend-buildkit": "^2.0.0",
        "@beanbag/jasmine-suites": "^3.0.0",
        "@beanbag/js-buildkit": "^1.0.3",
        "@rollup/plugin-alias": "^5.1.1",
        "@storybook/addon-a11y": "^10.0.2",
        "@storybook/addon-docs": "^10.0.2",
        "@storybook/addon-links": "^10.0.2",
        "@storybook/addon-themes": "^10.0.2",
        "@storybook/html-vite": "^10.0.2",
        "@tabler/icons": "^3.35.0",
        "@types/jasmine": "^5.1.12",
        "@vitejs/plugin-react": "^5.0.4",
        "babel-plugin-transform-remove-imports": "^1.8.1",
        "clean-css-cli": "^5.6.3",
        "eslint-plugin-storybook": "10.0.2",
        "jasmine": "^5.12.0",
        "jasmine-spec-reporter": "^7.0.0",
        "jquery": "^3.7.1",
        "jsdom": "^27.0.1",
        "less": "^4.4.2",
        "less-loader": "^12.3.0",
        "prop-types": "^15.8.1",
        "resolve": "^1.22.11",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-shell": "^1.0.9",
        "storybook": "^10.0.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/beanbaginc/ink"
    }
}
